<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/transparent_bg"
    android:clickable="true"
    android:focusable="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/mainCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" 
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/headerContainer"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="#0087FF"
                android:paddingHorizontal="20dp"
                android:paddingTop="20dp">

                <ImageButton
                    android:id="@+id/btnClose"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/ripple_circle_white"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    app:tint="#FFFFFF"
                    android:contentDescription="Close"
                    android:padding="8dp"/>

                <TextView
                    android:id="@+id/txtTopInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="INCOMING CALL"
                    android:textColor="#CCFFFFFF"
                    android:textSize="12sp"
                    android:letterSpacing="0.1"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtTopInfo"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="60dp" 
                    android:text="Searching..."
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/avatarContainer"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="120dp" 
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="24dp"
                app:cardCornerRadius="40dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#FFFFFF">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    
                    <TextView
                        android:id="@+id/txtAvatarFallback"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="A"
                        android:textColor="#0087FF"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/imgAvatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="0dp"
                        android:scaleType="centerCrop"
                        android:src="@android:drawable/sym_def_app_icon" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/bodyContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/headerContainer"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:paddingHorizontal="24dp">

                <TextView
                    android:id="@+id/txtNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+91 00000 00000"
                    android:textColor="#1F2937"
                    android:textSize="18sp"
                    android:letterSpacing="0.05"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="India â€¢ Mobile"
                    android:textColor="#6B7280"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/btnViewProfile"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="20dp"
                    android:background="#F3F4F6"
                    android:gravity="center"
                    android:text="VIEW FULL PROFILE"
                    android:textColor="#0087FF"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:letterSpacing="0.05"
                    android:clickable="true"
                    android:focusable="true" />
                
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="#E5E7EB" />
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:id="@+id/btnActionCall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground">
                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@android:drawable/sym_action_call"
                            app:tint="#374151" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="CALL"
                            android:textSize="10sp"
                            android:textColor="#374151"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnActionSpam"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/stat_notify_error"
                            app:tint="#EF4444" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="SPAM"
                            android:textSize="10sp"
                            android:textColor="#EF4444"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnActionSave"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground">
                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@android:drawable/ic_menu_add"
                            app:tint="#374151" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="SAVE"
                            android:textSize="10sp"
                            android:textColor="#374151"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnActionBlock"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground">
                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@android:drawable/ic_delete"
                            app:tint="#EF4444" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="BLOCK"
                            android:textSize="10sp"
                            android:textColor="#EF4444"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/adContainer"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/bodyContainer"
                android:background="#FAFAFA"
                android:padding="0dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="ADVERTISEMENT"
                    android:textColor="#D1D5DB"
                    android:textSize="10sp"
                    android:letterSpacing="0.2"/>
            </FrameLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>