<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_notification_white"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QCALL"
            android:textColor="#1C64F2"
            android:textStyle="bold"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  â€¢  "
            android:textColor="#94A3B8"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@android:drawable/stat_sys_phone_call"
            android:tint="#64748B" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Incoming Call"
            android:textColor="#64748B"
            android:textSize="12sp"
            android:layout_marginStart="4dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/notif_image"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@android:drawable/sym_def_app_icon"
            android:background="@drawable/bg_avatar_gold_border"
            android:padding="3dp"
            android:scaleType="centerCrop"
            android:clipToOutline="true" />

        <LinearLayout
            android:id="@+id/buttons_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/notif_btn_decline"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/bg_btn_decline_flat"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:padding="12dp"
                android:scaleType="fitCenter"
                android:tint="#FFFFFF" />

            <ImageButton
                android:id="@+id/notif_btn_accept"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_btn_answer_flat"
                android:src="@android:drawable/ic_menu_call"
                android:padding="12dp"
                android:scaleType="fitCenter"
                android:tint="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/notif_image"
            android:layout_toStartOf="@id/buttons_container"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notif_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unknown Caller"
                android:textColor="#0F172A"
                android:textSize="20sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/notif_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+1 000 000 000"
                android:textColor="#0F172A"
                android:textSize="15sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:layout_marginTop="2dp" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>